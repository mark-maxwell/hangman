<style type="text/css">
  .hidden { display: none; }
</style>

<div class="display_container">
  <span>
    <%= progress %>
  </span> 
  <span>
    Lives: <%= lives %>
  </span> 
</div>
<form>
  <div class="submit_container">
    <span>
      Enter:
    </span>
    <span>
      <input type="text" name="guess" <%= game_over_input %> />
    </span>
    <span>
      <input type="submit" value="submit" <%= game_over_input %> />
    </span> 
  </div>
  <div class="<%= game_over %>">
    <%= game_over_message %>
  </div>
</form>