  <div class="word">
    <%= progress %>
  </div>
  <div class="entry_based_message">
    <%= error_message %>
  </div>
  <div class="guess_container">
    <form action="/submit_guess/" method="get">
      <div class="submit_container">
        <div>
          <input class="input-guess" type="text" name="guess" autocomplete="off" autofocus placeholder="Enter Guess..." />
        </div>
        <div>
          <input class="enter" type="submit" value="Make a Guess!" />
        </div> 
      </div>
    </form>
  </div>
</div>

<div class="lives_container">
  <div class="hangman current-<%= lives%>">
    <img src="../hangman_<%=lives%>.png">
  </div>
  <span class="lives current-<%= lives %>"></span>
  <div class="trash_container">
    <div class="trash_heading">
      Guesses:
    </div>
    <div class="trash">
      <%= trashed_letters %>
    </div>
    <div class="trash_whole_heading">
      Whole word guesses:
    </div>
    <div class="trash_whole_words">
      <%= trashed_words %>
    </div>
  </div>
</div>

<div class="clearfix"></div>